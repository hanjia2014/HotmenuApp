@using HotmenuApp.Models
@using System.Globalization
@model ICollection<Order>
@{
    ViewBag.Title = "Orders";
}
<div class="main" data-ng-controller="HotmenuApp.Controllers.OrderManagementController as OrderManagementController">
    <div class="main-inner">
        <div class="container">

            <div class="widget">
                <div class="widget-header">
                    <i class="icon-signal"></i>
                    <h3> Menu Items</h3>
                </div>
                <!-- /widget-header -->
                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th> Time </th>
                                <th> Table No. </th>
                                <th> Status </th>
                                <th class="td-actions"> </th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr data-ng-repeat="order in Orders | orderBy:'-Time'">
                                    <td> {{order.Time}} </td>
                                    <td> {{order.TableNo}} </td>
                                    <td> {{order.Status}} </td>
                                    <td class="td-actions">
                                        <a href="javascript:" class="btn btn-primary btn-small" data-toggle="modal" data-target="#orderDetailsDialog">View</a>
                                    </td>
                                </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /widget-content -->
            </div>

        </div>
    </div>

    <div class="modal fade" role="dialog" id="orderDetailsDialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Order Details</h4>
                </div>
                <div class="modal-body">

                    <div class="control-group">
                        <div class="controls">
                            <div class="input-append">
                                @if (ViewBag.SelectedOrder != null)
                                {
                                    var selectedOrder = ViewBag.SelectedOrder as Order;
                                    if (selectedOrder != null)
                                    {
                                        @selectedOrder.Items.Count;
                                    }
                                }
                            </div>
                        </div>	<!-- /controls -->
                    </div> <!-- /control-group -->
                </div>
                <div class="modal-footer">
                    <a class="btn btn-default" data-ng-click="menuController.addToOrderWithClientName(NewClientName)" href="/home/order" data-dismiss="modal">Ok</a><a class="btn btn-default pull-right" data-dismiss="modal">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>